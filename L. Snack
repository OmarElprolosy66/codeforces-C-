#include <iostream>
#include<iomanip>
using namespace std;
int main() {
    short X;
    double Y;
    cin>> X>>Y;
    if(X==1){
        cout<<"Total: R "<<fixed<<setprecision(2)<<Y*4.00;
    } else if(X==2){
        cout<<"Total: R "<<fixed<<setprecision(2)<<Y*4.50;
    } else if(X==3){
        cout<<"Total: R "<<fixed<<setprecision(2)<<fixed<<Y*5.00;
    } else if(X==4){
        cout<<"Total: R "<<fixed<<setprecision(2)<<Y*2.00;
    } else if(X==5){
        cout<<"Total: R "<<fixed<<setprecision(2)<<Y*1.50;
    }

}
